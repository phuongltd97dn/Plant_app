<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clPlantContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_cultivation"
    android:clipToPadding="false"
    android:padding="16dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvCultivationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCultivationTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/cultivation_time_text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvCultivationName"
        app:layout_constraintTop_toBottomOf="@+id/tvCultivationName" />

    <TextView
        android:id="@+id/tvCultivationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvCultivationTimeLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvCultivationName" />

    <TextView
        android:id="@+id/tvHarvestTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/harvest_time_text"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvCultivationName"
        app:layout_constraintTop_toBottomOf="@+id/tvCultivationTimeLabel" />

    <TextView
        android:id="@+id/tvHarvestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvHarvestTimeLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvCultivationTimeLabel" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPlant"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="2dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>